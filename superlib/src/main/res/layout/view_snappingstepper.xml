<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shape_gray_stroke_conner3"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/ivStepperMinus"
        android:layout_width="30dp"
        android:layout_height="match_parent"
        android:clickable="true"
        android:scaleType="centerInside"
        android:src="@drawable/ic_snappingstepper_minus"
        android:paddingLeft="9.5dp"
        android:paddingRight="9.5dp"/>

    <ImageView
        android:id="@+id/ivStepperPlus"
        android:layout_width="30dp"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:clickable="true"
        android:scaleType="centerInside"
        android:src="@drawable/ic_snappingstepper_plus"
        android:padding="6dp"/>
    <TextView
        android:id="@+id/tvStepperContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toLeftOf="@id/ivStepperPlus"
        android:layout_toRightOf="@id/ivStepperMinus"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="12sp"
        tools:text="100"
        android:drawableLeft="@drawable/shape_verticle_diver"
        android:drawableRight="@drawable/shape_verticle_diver"
       />

</RelativeLayout>