<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="35dp"
    android:paddingRight="35dp"
    android:paddingTop="50dp"
    android:id="@+id/ll_main"
    android:background="@color/white">
    <!--登录注册通用布局-->
    <LinearLayout
        android:id="@+id/ll_1"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal">
        <TextView
            android:minWidth="80dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="10dp"
            android:drawableLeft="@drawable/ic_phone_login"
            android:drawablePadding="5dp"
            android:gravity="center_vertical"
            android:text="手机号"
            android:textColor="@color/mipaiTextColorSelect"
            android:id="@+id/tv_1"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/tv_send_code"
                android:layout_width="90dp"
                android:layout_height="25dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="13dp"
                android:layout_weight="2"
                android:background="@drawable/shape_gray_stroke_conner5"
                android:gravity="center"
                android:text="@string/SendSMScode"
                android:textColor="#a3926c"
                android:textSize="12sp"
                android:textStyle="bold" />
            <EditText
                android:id="@+id/et_1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:gravity="center_vertical"
                android:hint="请输入手机号"
                android:inputType="numberDecimal"
                android:textColor="@color/black"
                android:textColorHint="@color/mipaiTextColorNormal"
                android:textSize="12sp"
                android:maxLength="11"
                android:layout_toLeftOf="@id/tv_send_code"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:background="#b5b6b7" />
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_2"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="28dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_2"
            android:minWidth="80dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:drawableLeft="@drawable/ic_sms_code"
            android:drawablePadding="5dp"
            android:gravity="center_vertical"
            android:text="验证码"
            android:textColor="@color/mipaiTextColorSelect" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/et_2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:gravity="center_vertical"
                android:hint="请输入验证码"
                android:inputType="numberDecimal"
                android:textColor="@color/black"
                android:textColorHint="@color/mipaiTextColorNormal"
                android:textSize="12sp" />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:background="#b5b6b7" />
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_3"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="28dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_3"
            android:minWidth="80dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:drawableLeft="@drawable/ic_password"
            android:drawablePadding="5dp"
            android:gravity="center_vertical"
            android:text="密码"
            android:textColor="@color/mipaiTextColorSelect" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/et_3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:gravity="center_vertical"
                android:hint="请输入6-20位密码"
                android:textColor="@color/black"
                android:textColorHint="@color/mipaiTextColorNormal"
                android:textSize="12sp" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_eye_closed"
                android:id="@+id/iv_see_pwd"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:visibility="gone"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:background="#b5b6b7" />
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_4"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="28dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:visibility="gone">
        <TextView
            android:id="@+id/tv_4"
            android:minWidth="80dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:drawableLeft="@drawable/ic_password"
            android:drawablePadding="5dp"
            android:gravity="center_vertical"
            android:text="确认密码"
            android:textColor="@color/mipaiTextColorSelect" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/et_4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:gravity="center_vertical"
                android:hint="确认密码"
                android:textColor="@color/black"
                android:textColorHint="@color/mipaiTextColorNormal"
                android:textSize="12sp"
                android:inputType="textPassword"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:background="#b5b6b7" />
        </RelativeLayout>
    </LinearLayout>
    <Button
        android:id="@+id/btn_confirm"
        style="@style/ButtonStyle"
        android:layout_marginTop="20dp"
        android:text="登录"
        android:textColor="@color/white" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="注册账号"
        android:layout_gravity="center"
        android:textSize="12sp"
        android:textColor="@color/mipaiTextColorNormal"
        android:padding="10dp"
        android:id="@+id/tv_sub_function"
        android:layout_marginTop="5dp"/>
    <androidx.legacy.widget.Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
    <!--三方登录-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rl_third"
        android:layout_marginBottom="25dp"
        android:visibility="gone"

        >
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal"
           android:id="@+id/ll_third_title">
           <View
               android:layout_width="0dp"
               android:layout_height="1dp"
               android:background="#b5b6b7"
               android:layout_weight="1"
               android:layout_gravity="center_vertical"/>
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="其他方式登录"
               android:gravity="center"
               android:paddingLeft="5dp"
               android:paddingRight="5dp"
               android:textColor="@color/mipaiTextColorNormal"/>
           <View
               android:layout_width="0dp"
               android:layout_height="1dp"
               android:background="#b5b6b7"
               android:layout_weight="1"
               android:layout_gravity="center_vertical"/>
       </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_centerInParent="true"
            android:layout_marginTop="35dp"
            android:layout_below="@id/ll_third_title">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_wechat"
                android:layout_marginRight="50dp"
                android:drawableTop="@drawable/selector_wechat_login"
                android:text="微信登录"
                android:textColor="@color/mipaiTextColorNormal"
                android:drawablePadding="5dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_password_login"
                android:id="@+id/tv_pwd"
                android:layout_marginLeft="50dp"
                android:drawableTop="@drawable/selector_password_login"
                android:text="密码登录"
                android:textColor="@color/mipaiTextColorNormal"
                android:drawablePadding="5dp"
                />
        </LinearLayout>
    </RelativeLayout>
    <!--注册协议-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/ll_agreement"
        android:layout_marginBottom="25dp"
        android:layout_gravity="center"
        android:visibility="gone"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="注册既表示您同意"
            android:textSize="10sp"
            android:gravity="center"
            android:textColor="@color/mipaiTextColorNormal"
            android:id="@+id/tv_protocal_title"
            android:drawablePadding="5dp"
            android:layout_gravity="center_horizontal"
            />
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal"
           android:layout_marginTop="10dp"
           android:gravity="center_horizontal">
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="《觅拍用户服务协议》"
               android:textSize="10sp"
               android:textColor="#a3926c"
               android:id="@+id/tv_agreement_1"
              />
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="、"
               android:textSize="10sp"
               android:textColor="#a3926c"
               />
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="《觅拍隐私保护政策》"
               android:textSize="10sp"
               android:textColor="#a3926c"
               android:id="@+id/tv_agreement_2"/>
       </LinearLayout>
    </LinearLayout>
</LinearLayout>