<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingLeft="35dp"
    android:paddingRight="35dp">

    <FrameLayout
        android:id="@+id/fl_set_password_by_phone"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_marginTop="45dp"
        android:background="@drawable/shape_gray_stroke_conner5">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="16dp"
            android:src="@drawable/ic_phone_login" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="用手机号设置密码"
            android:textColor="@color/text_color" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/fl_set_password_by_email"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/shape_gray_stroke_conner5">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="16dp"
            android:src="@drawable/ic_email_login" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="用邮箱设置密码"
            android:textColor="@color/text_color" />
    </FrameLayout>


</LinearLayout>