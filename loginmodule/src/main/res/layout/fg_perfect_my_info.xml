<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingLeft="35dp"
    android:paddingRight="35dp">

    <androidx.legacy.widget.Space
        android:id="@+id/space"
        android:layout_width="0dp"
        android:layout_height="0dp" />

    <ImageView
        android:id="@+id/iv_head"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:src="@drawable/ic_take_photo" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/shape_gray_stroke_conner5"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="15dp">

        <ImageView
            android:id="@+id/iv_icon_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_person_nick" />

        <EditText
            android:id="@+id/et_1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="@string/EnterNicknamecharacters16"
            android:textColor="@color/black"
            android:textColorHint="#a0a0a0"
            android:textSize="12sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_select_gender"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/shape_gray_stroke_conner5"
        android:drawableLeft="@drawable/ic_gender"
        android:drawablePadding="15dp"
        android:drawableRight="@drawable/ic_arrow_right"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:text="@string/PleaseSelect"
        android:textColor="#a0a0a0"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tv_select_birthday"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/shape_gray_stroke_conner5"
        android:drawableLeft="@drawable/ic_gender"
        android:drawablePadding="15dp"
        android:drawableRight="@drawable/ic_arrow_right"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:text="@string/PleaseSelectDateofBirth"
        android:textColor="#a0a0a0"
        android:textSize="12sp" />

    <com.allen.library.SuperButton
        android:id="@+id/btn_finish"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="20dp"
        android:textColor="@color/white"
        app:sCornersRadius="5dp"
        app:sSelectorNormalColor="@color/jiuzhou_orange"
        app:sSelectorPressedColor="@color/jiuzhou_orange_dark"
        app:sSolidColor="@color/jiuzhou_orange"
        app:sUseSelector="true"
        android:text="@string/Finish" />

</LinearLayout>