<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:psd="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="设置支付密码"
        android:textColor="@color/black"
        android:id="@+id/tv_title"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="25dp"
        />
    <cn.hym.superlib.widgets.view.ClearEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="90dp"
        android:id="@+id/et_code"
        android:hint="请输入邀请码"
        android:textSize="14sp"
        android:textColor="@color/black"
        android:visibility="gone"
        android:maxLength="6"
        android:padding="10dp"
        />
    <com.hym.eshoplib.widgets.PayPsdInputView
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="90dp"
        psd:maxCount="6"
        psd:psdType="bottomLine"
        psd:rectAngle="4dp" />
    <Button
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:id="@+id/btn_confirm"
        android:text="确定"
        android:textColor="@color/white"
        android:background="@drawable/selector_btn"
        android:layout_marginTop="50dp"
        android:visibility="gone"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/_tv_forget_pwd"
        android:text="忘记密码"
        android:textColor="@color/mipaiTextColorSelect"
        android:layout_marginTop="10dp"
        android:layout_gravity="right"
        android:layout_marginRight="25dp"
        android:visibility="gone"/>

</LinearLayout>