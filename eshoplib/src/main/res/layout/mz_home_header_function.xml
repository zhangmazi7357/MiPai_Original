            app:drawableTopHeight="26dp"
            app:drawableTopWidth="27dp" />

        <cn.hym.superlib.mz.widgets.DrawableTextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableTop="@drawable/ic_function_tab_5"
