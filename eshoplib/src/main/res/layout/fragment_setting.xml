<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f1f1f1"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:layout_weight="1"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.allen.library.SuperTextView
                android:id="@+id/tv_1"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                app:sBottomDividerLineMarginLR="10dp"
                app:sDividerLineColor="#efefef"
                app:sDividerLineHeight="1dp"
                app:sDividerLineType="bottom"
                app:sLeftTextColor="@color/black"
                app:sLeftTextString="账号与安全"
                app:sRightIconRes="@drawable/ic_arrow_right"
                app:sRightTextColor="#cccccc" />

            <com.allen.library.SuperTextView
                android:id="@+id/tv_2"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                app:sBottomDividerLineMarginLeft="10dp"
                app:sDividerLineColor="#efefef"
                app:sDividerLineHeight="1dp"
                app:sDividerLineType="bottom"
                app:sLeftTextColor="@color/black"
                app:sLeftTextString="通用"
                app:sRightIconRes="@drawable/ic_arrow_right"
                app:sRightTextColor="#cccccc"
                app:sRightTextSize="12sp" />

            <com.allen.library.SuperTextView
                android:id="@+id/tv_3"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                app:sBottomDividerLineMarginLeft="10dp"
                app:sDividerLineColor="#efefef"
                app:sDividerLineHeight="1dp"
                app:sDividerLineType="bottom"
                app:sLeftTextColor="@color/black"
                app:sLeftTextString="帮助中心"
                app:sRightIconRes="@drawable/ic_arrow_right"
                app:sRightTextColor="#cccccc" />

            <com.allen.library.SuperTextView
                android:id="@+id/tv_4"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                app:sLeftTextColor="@color/black"
                app:sLeftTextString="关于觅拍"
                app:sRightIconRes="@drawable/ic_arrow_right"
                app:sRightTextColor="@color/jiuzhou_orange" />


            <com.allen.library.SuperTextView
                android:id="@+id/tv_5"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                app:sLeftTextColor="@color/black"
                app:sLeftTextString="注销账号"
                app:sRightIconRes="@drawable/ic_arrow_right"
                app:sRightTextColor="@color/jiuzhou_orange" />

        </LinearLayout>
    </ScrollView>

    <TextView
        android:id="@+id/tv_copyright"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:lineSpacingExtra="5dp"
        android:text="Copyright©2018 \n北京觅拍信息技术有限公司版权所有"
        android:textColor="#cccccc"
        android:textSize="10sp" />

    <Button
        android:id="@+id/btn_logout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="35dp"
        android:background="@drawable/selector_btn"
        android:text="退出登录"
        android:textColor="@color/white" />
</LinearLayout>