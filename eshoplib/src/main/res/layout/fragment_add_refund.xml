<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f1f1f1">

    <com.allen.library.SuperTextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        app:sLeftTextString="申请服务"
        app:sRightTextString="仅退款"
        android:background="@color/white"
        android:layout_marginTop="10dp"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#838383"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:background="@color/white"
        >
        <cn.hym.superlib.widgets.view.RequiredTextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:requiredText="退款原因"
            android:gravity="center_vertical"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical|right"
            android:id="@+id/tv_item"
            android:hint="请选择退款原因"
            android:textColorHint="#9c9c9c"
            android:textColor="@color/black"
            android:drawableRight="@drawable/ic_arrow_right"
            android:drawablePadding="10dp"
            android:textSize="12sp"
            />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#e1e1e1"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:background="@color/white"
        >
        <cn.hym.superlib.widgets.view.RequiredTextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:requiredText="退款金额"
            android:gravity="center_vertical"
            />
        <cn.hym.superlib.widgets.view.ClearEditText
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical|right"
            android:id="@+id/et_count"
            android:hint="请输入退款金额"
            android:textColorHint="#9c9c9c"
            android:textColor="@color/black"
            android:background="@null"
            android:textSize="12sp"
            android:inputType="numberDecimal"
            />
    </LinearLayout>

</LinearLayout>