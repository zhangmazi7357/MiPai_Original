<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f1f1f1">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:background="@color/white">
        <com.allen.library.SuperTextView
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:id="@+id/tv_1"
            app:sLeftTextString="流水号"
            app:sLeftTextColor="@color/black"
            app:sLeftTextSize="10sp"
            app:sDividerLineType="none"
            app:sRightTextSize="10sp"
            app:sRightTextColor="#b0b0b0"
            />
        <com.allen.library.SuperTextView
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:id="@+id/tv_2"
            app:sLeftTextString="类型"
            app:sLeftTextColor="@color/black"
            app:sLeftTextSize="10sp"
            app:sDividerLineType="none"
            app:sRightTextSize="10sp"
            app:sRightTextColor="#b0b0b0"
            />
        <!--可变-->
        <com.allen.library.SuperTextView
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:id="@+id/tv_3"
            app:sLeftTextString="支出"
            app:sLeftTextColor="@color/black"
            app:sLeftTextSize="10sp"
            app:sDividerLineType="none"
            app:sRightTextSize="10sp"
            app:sRightTextColor="#b0b0b0"
            />
        <!--可变-->
        <com.allen.library.SuperTextView
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:id="@+id/tv_4"
            app:sLeftTextString="收款方式"
            app:sLeftTextColor="@color/black"
            app:sLeftTextSize="10sp"
            app:sDividerLineType="none"
            app:sRightTextSize="10sp"
            app:sRightTextColor="#b0b0b0"
            android:visibility="gone"
            />
        <com.allen.library.SuperTextView
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:id="@+id/tv_5"
            app:sLeftTextString="时间"
            app:sLeftTextColor="@color/black"
            app:sLeftTextSize="10sp"
            app:sDividerLineType="none"
            app:sRightTextSize="10sp"
            app:sRightTextColor="#b0b0b0"
            />
        <com.allen.library.SuperTextView
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:id="@+id/tv_6"
            app:sLeftTextString="钱包余额"
            app:sLeftTextColor="@color/black"
            app:sLeftTextSize="10sp"
            app:sDividerLineType="none"
            app:sRightTextSize="10sp"
            app:sRightTextColor="#b0b0b0"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:paddingBottom="10dp"
        android:orientation="vertical"
        android:layout_marginTop="10dp">
        <com.allen.library.SuperTextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:id="@+id/tv_remark"
            app:sLeftTextString="备注"
            app:sLeftTextColor="@color/black"
            app:sLeftTextSize="10sp"
            app:sRightTextSize="10sp"
            app:sRightTextColor="#b0b0b0"
            app:sBottomDividerLineMarginLR="10dp"
            />
        <com.allen.library.SuperTextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:id="@+id/tv_order_num"
            app:sLeftTextString="订单编号"
            app:sLeftTextColor="@color/black"
            app:sLeftTextSize="10sp"
            app:sRightTextSize="10sp"
            app:sRightTextColor="#b0b0b0"
            app:sDividerLineType="none"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ll_alipay"
            android:orientation="vertical"
            android:paddingTop="10dp"
            android:background="@color/white"
            android:visibility="gone">
            <com.allen.library.SuperTextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:id="@+id/tv_nick"
                app:sLeftTextString="支付宝昵称"
                app:sLeftTextColor="@color/black"
                app:sLeftTextSize="10sp"
                app:sRightTextSize="10sp"
                app:sRightTextColor="#b0b0b0"
                />
            <com.allen.library.SuperTextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:id="@+id/tv_alipay_acount"
                app:sLeftTextString="支付宝账号"
                app:sLeftTextColor="@color/black"
                app:sLeftTextSize="10sp"
                app:sRightTextSize="10sp"
                app:sRightTextColor="#b0b0b0"
                />
            <com.allen.library.SuperTextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:id="@+id/tv_realname"
                app:sLeftTextString="真是姓名"
                app:sLeftTextColor="@color/black"
                app:sLeftTextSize="10sp"
                app:sRightTextSize="10sp"
                app:sRightTextColor="#b0b0b0"
                />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>