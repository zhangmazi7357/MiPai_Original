<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/bg_need_shape">

        <ImageView
            android:id="@+id/iv_view"
            android:layout_width="match_parent"
            android:layout_height="163dp"
            android:scaleType="fitXY" />

        <TextView
            android:id="@+id/tv_describe"
            android:layout_width="wrap_content"
            android:layout_height="34dp"
            android:layout_below="@id/iv_view"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:maxLines="2"
            android:text="人像写真人像写真人像写真人像写真人像写真人像写真"
            android:textColor="#292929"
            android:textSize="12sp" />


        <TextView
            android:id="@+id/tv_pay_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_describe"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="6dp"
            android:text="1人付款"
            android:textColor="#969696"
            android:textSize="10sp" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_pay_count">

            <LinearLayout
                android:id="@+id/ll_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="11dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_rmb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="¥"
                    android:textColor="#DF4650"
                    android:textSize="11sp" />

                <TextView
                    android:id="@+id/tv_one_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="59"
                    android:textColor="#DF4650"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_before_price"
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="¥199"
                    android:textColor="#969696"
                    android:textSize="9sp" />

            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/bg_need_shape">

        <ImageView
            android:id="@+id/iv_view2"
            android:layout_width="match_parent"
            android:layout_height="163dp"
            android:scaleType="fitXY" />

        <TextView
            android:id="@+id/tv_describe2"
            android:layout_width="wrap_content"
            android:layout_height="34dp"
            android:layout_below="@id/iv_view2"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:maxLines="2"
            android:text="人像写真人像写真人像写真人像写真人像写真人像写真"
            android:textColor="#292929"
            android:textSize="12sp" />


        <TextView
            android:id="@+id/tv_pay_count2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_describe2"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="6dp"
            android:text="1人付款"
            android:textColor="#969696"
            android:textSize="10sp" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_pay_count2">

            <LinearLayout
                android:id="@+id/ll_price2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="11dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_rmb2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="¥"
                    android:textColor="#DF4650"
                    android:textSize="11sp" />

                <TextView
                    android:id="@+id/tv_one_money2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="59"
                    android:textColor="#DF4650"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_before_price2"
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="¥199"
                    android:textColor="#969696"
                    android:textSize="9sp" />

            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>

</LinearLayout>