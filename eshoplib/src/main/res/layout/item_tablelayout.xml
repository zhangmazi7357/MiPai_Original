<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="47dp"
    android:layout_marginLeft="17dp"
    android:layout_marginTop="5dp"
    android:layout_marginRight="17dp"
    android:layout_marginBottom="5dp"
    android:orientation="horizontal">

    <TextView
        android:layout_width="1dp"
        android:layout_height="20dp"
        android:layout_gravity="center_vertical"
        android:background="#D8D8D8" />

    <RelativeLayout
        android:id="@+id/rl_comment"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">

            <TextView
                android:id="@+id/tv_comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="5dp"
                android:text="推荐"
                android:textColor="#FF5203"
                android:textSize="16dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_comment_line"
                android:layout_width="50dp"
                android:layout_height="3dp"
                android:layout_below="@id/tv_comment"
                android:background="#FF5203"></TextView>
        </RelativeLayout>
    </RelativeLayout>

    <TextView
        android:layout_width="1dp"
        android:layout_height="20dp"
        android:layout_gravity="center_vertical"
        android:background="#D8D8D8" />

    <RelativeLayout
        android:id="@+id/rl_rl_take_photo"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">

            <TextView
                android:id="@+id/tv_photo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="5dp"
                android:text="拍照片"
                android:textColor="#292929"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/tv_photo_line"
                android:layout_width="50dp"
                android:layout_height="3dp"
                android:layout_below="@id/tv_photo"
                android:background="#FF5203"
                android:visibility="invisible"></TextView>
        </RelativeLayout>
    </RelativeLayout>

    <TextView
        android:layout_width="1dp"
        android:layout_height="20dp"
        android:layout_gravity="center_vertical"
        android:background="#D8D8D8" />

    <RelativeLayout
        android:id="@+id/rl_rl_take_video"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">

            <TextView
                android:id="@+id/tv_video"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="5dp"
                android:text="拍视频"
                android:textColor="#292929"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/tv_video_line"
                android:layout_width="50dp"
                android:layout_height="3dp"
                android:layout_below="@id/tv_video"
                android:background="#FF5203"
                android:visibility="invisible"></TextView>
        </RelativeLayout>
    </RelativeLayout>

    <TextView
        android:layout_width="1dp"
        android:layout_height="20dp"
        android:layout_gravity="center_vertical"
        android:background="#D8D8D8" />

</LinearLayout>