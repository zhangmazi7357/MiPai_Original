<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="51dp"
    android:visibility="gone">
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/jiuzhou_orange"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/iv_select_all"
            android:src="@drawable/ic_cb_unchecked"
            android:layout_marginLeft="8dp"
            android:layout_centerVertical="true"
            />
        <TextView
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="@string/Selectall"
            android:layout_toRightOf="@id/iv_select_all"
            android:layout_marginLeft="5dp"
            android:id="@+id/tv_select_all"/>
        <TextView
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="@string/Total"
            android:layout_toRightOf="@id/tv_select_all"
            android:layout_marginLeft="15dp"
            android:id="@+id/tv_total"/>
        <TextView
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/jiuzhou_orange"
            android:layout_toRightOf="@id/tv_total"
            android:layout_marginLeft="10dp"
            android:id="@+id/tv_price"/>
        <TextView
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:background="@color/jiuzhou_orange"
            android:text="去结算"
            android:gravity="center"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:textColor="@color/white"
            android:id="@+id/tv_go_pay"/>
    </RelativeLayout>

</LinearLayout>