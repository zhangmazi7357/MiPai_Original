<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:psd="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:background="@drawable/shape_white_solid_conner5"
        android:paddingBottom="20dp"

        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center"
            android:text="如何提升星级"
            android:textSize="12sp"
            android:textColor="@color/mipaiTextColorSelect"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:id="@+id/tv_title"
            android:drawableRight="@drawable/ic_cancle"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#f1f1f1"
            android:layout_marginLeft="10dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1.完善工作室信息"
            android:gravity="center_vertical"
            android:textColor="@color/mipaiTextColorSelect"
            android:padding="15dp"
            android:id="@+id/tv_1"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2.好评度的提升"
            android:gravity="center_vertical"
            android:textColor="@color/mipaiTextColorNormal"
            android:padding="15dp"
            android:id="@+id/tv_2"/>


    </LinearLayout>
</RelativeLayout>