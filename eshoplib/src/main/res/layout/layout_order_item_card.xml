<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:elevation="0dp"
    app:cardCornerRadius="5dp">

    <RelativeLayout
        android:id="@+id/rl_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <RelativeLayout
            android:id="@+id/rl_buyer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:visibility="gone"
            tools:visibility="visible">

            <ImageView
                android:id="@+id/iv_avatar"
                android:layout_width="44dp"
                android:layout_height="44dp"
                />

            <TextView
                android:id="@+id/tv_nick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/iv_avatar"
                android:textColor="@color/black"
                tools:text="姓名" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/rl_buyer">

            <ImageView
                android:id="@+id/iv_icon"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginRight="10dp"
                android:scaleType="centerCrop"
                 />

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/iv_icon"
                android:layout_toRightOf="@id/iv_icon"
                android:text="华谊兄弟传媒工作室"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/tv_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="36dp"
                android:layout_toRightOf="@id/iv_icon"
                android:text="类别：PPT方案"
                android:textColor="@color/mipaiTextColorNormal"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="36dp"
                android:text="x2"
                android:textColor="@color/mipaiTextColorNormal"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/iv_icon"
                android:layout_toRightOf="@id/iv_icon"
                android:text="￥：800"
                android:textColor="#ff0000" />

            <TextView
                android:id="@+id/tv_order_close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/iv_icon"
                android:layout_alignParentRight="true"
                android:text="交易关闭"
                android:textColor="#777777"
                android:textSize="10sp"
                android:visibility="gone"
                tools:visibility="visible" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@id/iv_icon"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <com.allen.library.SuperButton
                    android:id="@+id/btn_1"
                    android:layout_width="wrap_content"
                    android:layout_height="26dp"
                    android:minWidth="85dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:text="btn_1"
                    android:textColor="@color/mipaiTextColorSelect"
                    android:textSize="12sp"
                    app:sCornersRadius="5dp"
                    app:sSolidColor="#f3ebd8" />

                <Button
                    android:id="@+id/btn_2"
                    android:layout_width="wrap_content"
                    android:layout_height="26dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/selector_btn"
                    android:minWidth="85dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:text="btn_2"
                    android:textColor="@color/white"
                    android:textSize="12sp" />
            </LinearLayout>
        </RelativeLayout>

    </RelativeLayout>
</androidx.cardview.widget.CardView>
