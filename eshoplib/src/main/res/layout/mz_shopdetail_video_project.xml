<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_shop_project"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">

        <fm.jiecao.jcvideoplayer_lib.JCVideoPlayerStandard
            android:id="@+id/videoplayer"
            android:layout_width="match_parent"
            android:layout_height="200dp" />

        <ImageView
            android:id="@+id/speaker"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="left|bottom"
            android:layout_marginLeft="15dp"
            android:layout_marginBottom="15dp"
            android:src="@drawable/ic_launcher"
            android:visibility="gone" />

    </FrameLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:background="#FCE2AF">

        <ImageView
            android:id="@+id/iv_notify"
            android:layout_width="12dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="13dp"
            android:background="@drawable/icon_notifa" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20sp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_toRightOf="@id/iv_notify"
            android:text="平台交易保障好  线下交易风险高"
            android:textColor="#FF5203"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_report"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="17dp"
            android:text="举报"
            android:textColor="#FF5203"
            android:textSize="10sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <TextView
            android:id="@+id/tv_01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="19sp"
            android:layout_marginTop="17sp"
            android:text="¥"
            android:textColor="#DF4650"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_total_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2sp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_toRightOf="@id/tv_01"
            android:text="1000"
            android:textColor="#DF4650"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_before_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10sp"
            android:layout_toRightOf="@id/tv_total_price"
            android:text="原价"
            android:textColor="#9B9B9B"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/tv_buy_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20sp"
            android:text="销量100"
            android:textColor="#9B9B9B"
            android:textSize="11sp" />

    </RelativeLayout>

    <TextView
        android:id="@+id/tv_describe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingLeft="19dp"
        android:paddingBottom="10dp"
        android:text="宣传片拍摄/各种拍摄等"
        android:textColor="#000000"
        android:textSize="18sp" />

    <LinearLayout
        android:id="@+id/l_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingLeft="19dp"
        android:paddingRight="19dp"
        android:paddingBottom="10dp">

        <TextView
            android:id="@+id/proAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/black"
            android:textSize="14sp"
            tools:text="TextView" />

        <TextView
            android:id="@+id/proDistance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:textSize="11sp"
            tools:text="TextView" />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl_click_workhome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <ImageView
            android:id="@+id/iv_user_photo"
            android:layout_width="35sp"
            android:layout_height="35sp"
            android:layout_marginLeft="19sp"
            android:layout_marginTop="12sp"
            android:layout_marginBottom="12sp"
            android:scaleType="fitXY" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/iv_user_photo"
            android:layout_toRightOf="@id/iv_user_photo">

            <TextView
                android:id="@+id/tv_who_work"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5sp"
                android:text="xxx的工作室"
                android:textColor="#6F6F6F"
                android:textSize="12sp" />

            <ImageView
                android:id="@+id/iv_vip"
                android:layout_width="26dp"
                android:layout_height="13dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/tv_who_work"
                android:src="@drawable/ic_business_rt"
                android:visibility="gone" />


            <TextView
                android:id="@+id/tv_is_shimin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="14dp"
                android:layout_toRightOf="@id/tv_who_work"
                android:background="@drawable/bg_yellow_shape"
                android:paddingLeft="4dp"
                android:paddingTop="1dp"
                android:paddingRight="4dp"
                android:paddingBottom="1dp"
                android:text="实名"
                android:textColor="@color/white"
                android:textSize="8sp"
                android:visibility="gone" />
        </RelativeLayout>

        <me.zhanghai.android.materialratingbar.MaterialRatingBar
            android:id="@+id/ratingbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/iv_user_photo"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/iv_user_photo"
            android:isIndicator="true"
            android:maxHeight="18dp"
            android:minHeight="18dp"
            android:rating="5"
            android:stepSize="0.5"
            app:mrb_progressBackgroundTint="#f9b743"
            app:mrb_progressTint="#f9b743"
            app:mrb_secondaryProgressTint="#f9b743" />


        <LinearLayout
            android:id="@+id/ll_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/iv_user_photo"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/iv_user_photo"
            android:orientation="horizontal"
            android:visibility="gone">

            <ImageView
                android:id="@+id/iv_rating01"
                android:layout_width="12sp"
                android:layout_height="12sp"
                android:background="@drawable/icon_full_start" />

            <ImageView
                android:id="@+id/iv_rating02"
                android:layout_width="12sp"
                android:layout_height="12sp"
                android:layout_marginLeft="6dp"
                android:background="@drawable/icon_empty_start" />

            <ImageView
                android:id="@+id/iv_rating03"
                android:layout_width="12sp"
                android:layout_height="12sp"
                android:layout_marginLeft="6dp"
                android:background="@drawable/icon_empty_start" />

            <ImageView
                android:id="@+id/iv_rating04"
                android:layout_width="12sp"
                android:layout_height="12sp"
                android:layout_marginLeft="6dp"
                android:background="@drawable/icon_empty_start" />

            <ImageView
                android:id="@+id/iv_rating05"
                android:layout_width="12sp"
                android:layout_height="12sp"
                android:layout_marginLeft="6dp"
                android:background="@drawable/icon_empty_start" />

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/rl_right"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true">

            <ImageView
                android:layout_width="6dp"
                android:layout_height="12dp"
                android:layout_centerInParent="true"
                android:layout_marginRight="24dp"
                android:background="@drawable/ic_arrow_right" />
        </RelativeLayout>
    </RelativeLayout>


</LinearLayout>