<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   >
    <!--添加收货地址-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        >
        <cn.hym.superlib.widgets.view.RequiredTextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:requiredText="@string/Receiver"
            android:gravity="center_vertical"
            />
        <cn.hym.superlib.widgets.view.ClearEditText
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical|right"
            android:id="@+id/et_name"
            android:hint="@string/PleaseEnterReceiverName"
            android:textColorHint="#9c9c9c"
            android:textColor="@color/black"
            android:background="@null"
            android:textSize="14sp"
            />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#e1e1e1"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        >
        <cn.hym.superlib.widgets.view.RequiredTextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:requiredText="@string/MobileNo."
            android:gravity="center_vertical"
            />
        <cn.hym.superlib.widgets.view.ClearEditText
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical|right"
            android:id="@+id/et_phone"
            android:hint="@string/PleaseEnterMobileNo"
            android:textColorHint="#9c9c9c"
            android:textColor="@color/black"
            android:background="@null"
            android:textSize="14sp"
            android:inputType="numberDecimal"
            android:maxLength="11"
            />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#e1e1e1"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"/>
    <cn.hym.superlib.widgets.view.RequiredTextView
        android:layout_width="match_parent"
        android:layout_height="45dp"
        app:requiredText="@string/Deliveryaddress"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        />
    <cn.hym.superlib.widgets.view.ClearEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="top"
        android:background="@null"
        android:minHeight="50dp"
        android:textSize="12sp"
        android:textColor="@color/black"
        android:hint="@string/DetailedAddress"
        android:id="@+id/et_address"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#e1e1e1"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="设为默认"
            android:textColor="@color/black"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="25dp"
            android:id="@+id/tv_setdefault"/>
        <com.suke.widget.SwitchButton
            android:id="@+id/switch_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:layout_marginTop="15dp"
            app:sb_checked="true"
            app:sb_show_indicator="false" />
    </RelativeLayout>
</LinearLayout>