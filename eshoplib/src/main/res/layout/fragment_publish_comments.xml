<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/ll_main"
    android:padding="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
   >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
       >
        <ImageView
            android:layout_width="58dp"
            android:layout_height="58dp"
            android:scaleType="centerCrop"
            android:id="@+id/iv_icon"
            android:layout_marginRight="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_goods_name"
            android:layout_toRightOf="@id/iv_icon"
            android:textColor="@color/black"
            android:text="商品名称"/>
       <LinearLayout
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:orientation="horizontal"
           android:layout_toRightOf="@id/iv_icon"
           android:layout_below="@id/tv_goods_name"
           android:layout_marginTop="5dp"
           >
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:textColor="@color/black"
               android:text="@string/nice"
               android:layout_gravity="center_vertical"
               android:drawableLeft="@drawable/ic_cb_checked"
               android:drawablePadding="5dp"
               android:id="@+id/tv_nice"/>
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:textColor="@color/black"
               android:text="@string/common"
               android:layout_gravity="center_vertical"
               android:layout_marginLeft="15dp"
               android:drawableLeft="@drawable/ic_cb_unchecked"
               android:drawablePadding="5dp"
               android:id="@+id/tv_common"/>
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:textColor="@color/black"
               android:text="@string/bad"
               android:layout_gravity="center_vertical"
               android:layout_marginLeft="15dp"
               android:drawableLeft="@drawable/ic_cb_unchecked"
               android:drawablePadding="5dp"
               android:id="@+id/tv_bad"/>
       </LinearLayout>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#eeeeee"
        android:layout_marginTop="10dp"/>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">
        <!--意向描述-->
        <cn.hym.superlib.widgets.view.RequiredTextView
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:textColor="@color/black"
            android:gravity="center_vertical"
            app:requiredText="@string/Reviews"
            app:required="false"
            android:id="@+id/tv_title"
            />
        <FrameLayout
            android:layout_width="match_parent"
            android:padding="10dp"
            android:layout_height="80dp"
            android:background="@drawable/shape_gray_stroke_conner5"
            android:layout_marginBottom="15dp"
            android:id="@+id/fl_other">
            <cn.hym.superlib.widgets.view.ClearEditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:textColorHint="#9c9c9c"
                android:id="@+id/et_expect"
                android:maxLength="300"
                android:gravity="top"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_count"
                android:textColor="#9c9c9c"
                android:text="0/300"
                android:layout_gravity="right|bottom"/>
        </FrameLayout>
    </LinearLayout>

</LinearLayout>